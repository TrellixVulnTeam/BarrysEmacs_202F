; grep.key - key bindings for the grep result buffer
;
(setq grep-matched-string-colour 1)
(setq grep-name-colour 2)
(setq grep-position-to-match-column 0)

(local-bind-to-key "grep-visit-match" "\^m")
(local-bind-to-key "grep-replace-string" "r")

; set double click hook
(setq mouse-1-double-click-hook "grep-visit-match")
